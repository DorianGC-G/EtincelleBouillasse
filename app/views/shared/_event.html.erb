<div class='event-container'>
  <div class='image'>
    <img src="<%= event.poster_url.present? ? event.poster_url : image_url("placeholder.jpg") %>" id='affiche'>
  </div>
  <div class='content'>
    <h3><%= event.title %></h3>
    <span class='event-info'><%= event.public %> - <%= event.length %> min - <%= event.location %> - <%= event.date.to_date.strftime("%d/%m/%Y") %></span>
    <p class='short-description'><%= event.description %></p>
    <div class="event-links">
      <span><b>Tarif: <%= event.price %></b></span>
      <div class="clickable">
        <% if current_user %>
          <%= link_to "Modifier", edit_event_path(event), class: :button %>
          <%= link_to "Supprimer", event_path(event), data: { turbo_method: :delete, turbo_confirm: "Cet événement sera supprimé. Confirmer ?" }, class: :button %>
        <% end %>
        <%= link_to 'Réserver', event.reservation_link.present? ? event.reservation_link : contact_path, html_options={ target: "blank" , class: :button} %>
      </div>
    </div>
  </div>
  <div class="decoration"></div>
</div>